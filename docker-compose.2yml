version: "3.8"

services:
  backend:
    build:
      context: ./backend
    image: svsaket/todo-backend
    ports:
      - "5000:5000"
    environment:
      - MONGO_URI=mongodb://mongo:27017/todo
    depends_on:
      - mongo

  frontend:
    build:
      context: ./frontend
    image: svsaket/todo-frontend
    ports:
      - "3000:3000"

  mongo:
    image: mongo:7
    ports:
      - "27017:27017"
